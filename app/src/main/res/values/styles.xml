<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorOrangeLight</item>
        <item name="colorPrimaryDark">@color/colorOrangeDark</item>
        <item name="colorAccent">@color/colorGrayAccent</item>
        <item name="android:statusBarColor">@color/colorOrangeDark</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

    </style>
    <!-- Base application theme. -->
    <style name="SplashScreeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorOrangeLight</item>
        <item name="colorPrimaryDark">@color/colorOrangeDark</item>
        <item name="colorAccent">@color/colorGrayAccent</item>
        <item name="android:statusBarColor">@color/colorWhite</item>
    </style>

    <!-- Base application theme. -->
    <style name="SignUpTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorOrangeLight</item>
        <item name="colorPrimaryDark">@color/colorOrangeDark</item>
        <item name="colorAccent">@color/colorGrayAccent</item>
        <item name="android:statusBarColor">@color/colorWhite</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>


<!--        <item name="android:windowFullscreen">true</item>-->
    </style>
</resources>
